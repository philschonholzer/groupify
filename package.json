{
	"name": "groupify",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "biome check src",
		"test": "tsx --watch --test src/**/*.test.ts",
		"pages:build": "pnpm next-on-pages",
		"preview": "pnpm pages:build && wrangler pages dev",
		"deploy": "pnpm pages:build && wrangler pages deploy",
		"cf-typegen": "wrangler types --env-interface CloudflareEnv env.d.ts",
		"generate": "drizzle-kit generate:sqlite --schema=src/adapter/db/schema.ts",
		"update-meta": "drizzle-kit up:sqlite"
	},
	"dependencies": {
		"@effect/schema": "^0.66.15",
		"drizzle-orm": "^0.30.10",
		"effect": "^3.1.2",
		"nanoid": "^5.0.7",
		"next": "14.2.3",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "1.7.2",
		"@cloudflare/next-on-pages": "^1.11.2",
		"@cloudflare/workers-types": "^4.20240502.0",
		"@types/node": "^20.12.11",
		"@types/react": "^18.3.1",
		"@types/react-dom": "^18.3.0",
		"autoprefixer": "^10.4.19",
		"drizzle-kit": "^0.20.18",
		"postcss": "^8.4.38",
		"tailwindcss": "^3.4.3",
		"tsx": "^4.10.3",
		"typescript": "5.5.0-dev.20240516",
		"vercel": "^34.1.9",
		"wrangler": "^3.53.1"
	}
}
